
@model Administrate.Models.ChangePersonalDataViewModel
@{
    ViewBag.Title = "Cambiar datos personales";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("ChangePersonalData", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Cambiar datos.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
  

